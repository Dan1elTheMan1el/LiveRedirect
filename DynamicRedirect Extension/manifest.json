{
  "manifest_version": 2,
  "name": "LiveRedirector",
  "description": "Open matching webpages in LiveContainer via livecontainer:// scheme",
  "version": "1.0.5",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "LiveRedirector",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon-48.png",
      "96": "images/icon-96.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "<all_urls>"
  ]
}